{
    // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
    // 기존 특성에 대한 설명을 보려면 가리킵니다.
    // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WSL GDB Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/c/Users/alban/Documents/Dev/${fileBasenameNoExtension}",
            "args": ["-fThreading"],
            "stopAtEntry": false,
            "cwd": "/mnt/c/Users/alban/Documents/Dev",
            "environment": [],
            "externalConsole": true,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
            "pipeTransport": {
                "debuggerPath": "/usr/bin/gdb",
                "pipeProgram": "C:/WINDOWS/sysnative/bash.exe",
                "pipeArgs": [
                    "-c"
                ],
                "pipeCwd": ""
            },
            "sourceFileMap": {
                "/mnt/c": "C:/"
            }
        }
    ]
}